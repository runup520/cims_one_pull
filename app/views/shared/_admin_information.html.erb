<div class="span8">
      <section>     	
        <ol>     
	    		<%@articles.each do |t|%>
	      			<li>
	            <%=link_to t.title,t %>   
	            <span class="timestamp">
	             发表于<%= time_ago_in_words(t.created_at) %>前.
	            </span>
	            </br>
	      			<%=link_to '编辑',edit_article_path(t) %>|
	      				<%= link_to '删除',article_path(t), method: :delete, data: { confirm: '确定删除?' } %>
	         		</li>
	            <%end%>
         </ol>
       <%=paginate @articles, :theme => 'twitter-bootstrap' %> 
       </section> 
</div>